<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:gravity="center_horizontal"
    android:background="#FFFFFF">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Buscar Viagem"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Data da Viagem"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_gravity="start"
        android:layout_marginBottom="5dp"/>

    <CalendarView
        android:id="@+id/calendarViagem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp" />

    <EditText
        android:id="@+id/edtOrigem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Origem (Ex: SÃ£o Paulo)"
        android:padding="12dp"
        android:inputType="textCapWords"
        android:layout_marginBottom="10dp"/>

    <EditText
        android:id="@+id/edtDestino"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Destino (Ex: Rio de Janeiro)"
        android:padding="12dp"
        android:inputType="textCapWords"
        android:layout_marginBottom="30dp"/>

    <Button
        android:id="@+id/btnBuscarViagem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Buscar Viagem"
        android:padding="15dp"/>
</LinearLayout>