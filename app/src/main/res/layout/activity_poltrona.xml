<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:gravity="center_horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selecione sua(s) Poltrona(s)"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="15dp"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="15dp">
        <TextView style="@style/Legenda" android:background="#3F51B5" android:text="DisponÃ­vel"/>
        <TextView style="@style/Legenda" android:background="#FFC107" android:text="Reservado"/>
        <TextView style="@style/Legenda" android:background="#FF0000" android:text="Ocupado"/>
    </LinearLayout>

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:stretchColumns="*">

        <TableRow
            android:layout_marginBottom="5dp"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/tvPoltrona_1"
                style="@style/Poltrona"
                android:text="1" />

            <TextView
                android:id="@+id/tvPoltrona_2"
                style="@style/Poltrona"
                android:text="2" />

            <Space
                android:layout_width="40dp"
                android:layout_height="1dp" />

            <TextView
                android:id="@+id/tvPoltrona_3"
                style="@style/Poltrona"
                android:text="3" />

            <TextView
                android:id="@+id/tvPoltrona_4"
                style="@style/Poltrona"
                android:text="4" />
        </TableRow>

        <TableRow
            android:layout_marginBottom="5dp"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/tvPoltrona_5"
                style="@style/Poltrona"
                android:text="5" />

            <TextView
                android:id="@+id/tvPoltrona_6"
                style="@style/Poltrona"
                android:text="6" />

            <Space
                android:layout_width="40dp"
                android:layout_height="1dp" />

            <TextView
                android:id="@+id/tvPoltrona_7"
                style="@style/Poltrona"
                android:text="7" />

            <TextView
                android:id="@+id/tvPoltrona_8"
                style="@style/Poltrona"
                android:text="8" />
        </TableRow>

        <TableRow
            android:layout_marginBottom="5dp"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/tvPoltrona_9"
                style="@style/Poltrona"
                android:text="9" />

            <TextView
                android:id="@+id/tvPoltrona_10"
                style="@style/Poltrona"
                android:text="10" />

            <Space
                android:layout_width="40dp"
                android:layout_height="1dp" />

            <TextView
                android:id="@+id/tvPoltrona_11"
                style="@style/Poltrona"
                android:text="11" />

            <TextView
                android:id="@+id/tvPoltrona_12"
                style="@style/Poltrona"
                android:text="12" />
        </TableRow>

        <TableRow
            android:layout_marginBottom="5dp"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/tvPoltrona_13"
                style="@style/Poltrona"
                android:text="13" />

            <TextView
                android:id="@+id/tvPoltrona_14"
                style="@style/Poltrona"
                android:text="14" />

            <Space
                android:layout_width="40dp"
                android:layout_height="1dp" />

            <TextView
                android:id="@+id/tvPoltrona_15"
                style="@style/Poltrona"
                android:text="15" />

            <TextView
                android:id="@+id/tvPoltrona_16"
                style="@style/Poltrona"
                android:text="16" />
        </TableRow>

        <TableRow
            android:layout_marginBottom="20dp"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/tvPoltrona_17"
                style="@style/Poltrona"
                android:text="17" />

            <TextView
                android:id="@+id/tvPoltrona_18"
                style="@style/Poltrona"
                android:text="18" />

            <Space
                android:layout_width="40dp"
                android:layout_height="1dp" />

            <TextView
                android:id="@+id/tvPoltrona_19"
                style="@style/Poltrona"
                android:text="19" />

            <TextView
                android:id="@+id/tvPoltrona_20"
                style="@style/Poltrona"
                android:text="20" />
        </TableRow>
    </TableLayout>
    <TextView
        android:id="@+id/txtValorTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Valor Total: R$ 0,00"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#4CAF50"
        android:layout_marginBottom="20dp"/>

    <Button
        android:id="@+id/btnConfirmarReserva"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Confirmar Reserva"/>
</LinearLayout>